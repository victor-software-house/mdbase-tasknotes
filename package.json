{
  "name": "mdbase-tasknotes",
  "version": "0.2.0",
  "description": "Standalone CLI for managing markdown tasks via mdbase",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/callumalpass/mdbase-tasknotes.git"
  },
  "keywords": [
    "mdbase",
    "tasks",
    "cli",
    "markdown",
    "task-management",
    "natural-language",
    "productivity"
  ],
  "bin": {
    "mtn": "./dist/cli.js"
  },
  "files": [
    "dist",
    "scripts",
    "src/shims/bun-sqlite-worker.js"
  ],
  "scripts": {
    "build": "bun scripts/build.ts",
    "start": "bun dist/cli.js",
    "test": "bun run build && bun --test tests/**/*.test.mjs",
    "test:tz-parity": "bun run build && ./scripts/test-tz-parity.sh",
    "prepare": "bun scripts/build.ts",
    "postinstall": "bash scripts/patch-bun-sqlite.sh"
  },
  "dependencies": {
    "@callumalpass/mdbase": "^0.2.1",
    "commander": "^12.1.0",
    "date-fns": "^4.1.0",
    "rrule": "^2.8.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "tasknotes-nlp-core": "^0.1.0"
  }
}
